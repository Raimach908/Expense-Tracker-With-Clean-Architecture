@model ExpenseTracker.Core.Entities.BudgetEntity

@{
    ViewBag.Title = "Edit Budget";
}

<div class="container mt-5 mb-5">
    <h2 class="text-success text-center">Edit Budget</h2>

    <form action="/Budget/Edit" method="post" class="p-4 border rounded bg-white shadow-sm mx-auto" style="max-width: 500px;">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <label for="Category" class="text-success font-weight-bold">Category</label>
            <input id="Category" name="Category" class="form-control border-success" value="@Model.category" required />
        </div>

        <div class="form-group mt-3">
            <label for="Limit" class="text-success font-weight-bold">Limit</label>
            <input id="Limit" name="Limit" class="form-control border-success" value="@Model.Limit" type="number" step="0.01" required />
        </div>

        <div class="form-group mt-3">
            <label for="Spent" class="text-success font-weight-bold">Spent</label>
            <input id="Spent" name="Spent" class="form-control border-success" value="@Model.Spent" type="number" step="0.01" required />
        </div>

        <div class="form-group mt-4 text-center">
            <button type="submit" class="btn btn-success btn-block">Save</button>
        </div>
    </form>
</div>
