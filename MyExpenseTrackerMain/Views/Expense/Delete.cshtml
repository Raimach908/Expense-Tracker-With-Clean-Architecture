@model ExpenseTracker.Core.Entities.ExpenseEntity

@{
    ViewBag.Title = "Delete Expense";
}

<div class="container mt-5 mb-5">
    <form action="/Expense/DeleteConfirmed" method="post" class="p-4 border rounded bg-white shadow-sm mx-auto" style="max-width: 500px;">
        <input type="hidden" name="Id" value="@Model.Id" />

        <h3 class="text-danger text-center">Are you sure you want to delete this expense?</h3>

        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h4 class="card-title text-success">@Model.Category</h4>
                <h5>@Model.Title</h5>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 text-success font-weight-bold">Amount</dt>
                    <dd class="col-sm-8">@Model.Amount.ToString("C", new System.Globalization.CultureInfo("en-PK"))</dd>

                    <dt class="col-sm-4 text-success font-weight-bold">Date</dt>
                    <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>
                </dl>
            </div>
        </div>

        <!-- Submit and Back to List Buttons -->
        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/Expense/Index" class="btn btn-outline-success ml-2">Back to List</a>
        </div>
    </form>
</div>
