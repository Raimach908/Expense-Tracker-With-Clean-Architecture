@{
    ViewBag.Title = "Login";
}
<style>
    .login-container {
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        max-width: 800px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        margin-bottom: 80px;
    }

    .login-image-section {
        background-color: #28a745;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
        flex: 1;
    }

        .login-image-section img {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }

        .login-image-section h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .login-image-section p {
            font-size: 0.85rem;
            margin-bottom: 20px;
        }

        .login-image-section button {
            background-color: transparent;
            border: 1px solid white;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
        }

            .login-image-section button:hover {
                background-color: white;
                color: #28a745;
            }

    .login-form-section {
        background-color: #ffffff;
        padding: 30px;
        flex: 1;
    }

        .login-form-section h3 {
            font-size: 1.3rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .form-group label {
        font-weight: bold;
        font-size: 0.85rem;
    }

    .form-control {
        margin-bottom: 15px;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        font-size: 0.85rem;
        font-weight: bold;
    }

    .form-check {
        margin-top: -10px;
        margin-bottom: 20px;
    }

    .text-center a {
        color: #28a745;
        text-decoration: none;
        font-weight: bold;
        font-size: 0.85rem;
    }

        .text-center a:hover {
            text-decoration: underline;
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .login-container {
            flex-direction: column;
            width: 100%;
            max-width: 100%;
        }

        .login-image-section,
        .login-form-section {
            width: 100%;
            padding: 20px;
            flex: unset;
        }

        .login-form-section {
            padding-top: 0;
        }
    }

    @@media (max-width: 576px) {
        .login-image-section h3,
        .login-form-section h3 {
            font-size: 1.2rem;
        }

        .login-image-section p,
        .form-group label,
        .text-center a {
            font-size: 0.8rem;
        }
    }
</style>

<div class="container">
    <div class="login-container mx-auto">
        <div class="login-image-section ">
            <img src="/Images/avatar_2.jpg" alt="avatar" class="rounded-circle bg-success">
            <h3>SpendSmart</h3>
            <p>Manage your finances easily</p>
            <button onclick="window.location.href='/Account/Register'">SIGNUP</button>
        </div>
        <div class="login-form-section">
            <h3 class="text-center" style="width: 100%; margin-top: 4%">Sign in to your account</h3>
           @*  @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            } *@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }

            <form id="loginForm" method="post" action="/Account/Login">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="Email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="Password" required>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePassword()">
                    <label class="form-check-label" for="showPassword">Show Password</label>
                </div>
                <button type="submit" class="btn btn-success btn-block">LOGIN</button>
            </form>

            <div class="text-center mt-3">
                <a href="#">Forgot Password?</a>
            </div>
        </div>
    </div>
</div>


<script>
    function togglePassword() {
        var passwordField = document.getElementById("password");
        var showPasswordCheckbox = document.getElementById("showPassword");

        if (showPasswordCheckbox.checked) {
            passwordField.type = "text";
        } else {
            passwordField.type = "password";
        }
    }

    // Function to set a cookie
    function setCookie(name, value, days) {
        let expires = "";
        if (days) {
            let date = new Date();
            date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
            expires = "; expires=" + date.toUTCString();
        }
        document.cookie = name + "=" + (value || "") + expires + "; path=/";
    }

    // Function to get a cookie value by name
    function getCookie(name) {
        let nameEQ = name + "=";
        let ca = document.cookie.split(';');
        for (let i = 0; i < ca.length; i++) {
            let c = ca[i];
            while (c.charAt(0) === ' ') c = c.substring(1, c.length);
            if (c.indexOf(nameEQ) === 0) return c.substring(nameEQ.length, c.length);
        }
        return null;
    }

    // Function to save form data to cookies
    function saveFormDataToCookies(formId) {
        let form = document.getElementById(formId);
        let elements = form.elements;
        for (let i = 0; i < elements.length; i++) {
            if (elements[i].type !== "submit") {
                elements[i].addEventListener('change', function () {
                    setCookie(elements[i].name, elements[i].value, 2);
                });
            }
        }
    }

    // Function to load form data from cookies
    function loadFormDataFromCookies(formId) {
        let form = document.getElementById(formId);
        let elements = form.elements;
        for (let i = 0; i < elements.length; i++) {
            let cookieValue = getCookie(elements[i].name);
            if (cookieValue) {
                elements[i].value = cookieValue;
            }
        }
    }

    // Call the functions on page load
    document.addEventListener('DOMContentLoaded', function () {
        saveFormDataToCookies('loginForm');
        loadFormDataFromCookies('loginForm');
    });
</script>